# ============================================
# éšæ®µ 1: Base - é‹è¡Œç’°å¢ƒ
# ============================================
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# ============================================
# éšæ®µ 2: Build - ç·¨è­¯å°ˆæ¡ˆ
# ============================================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# âœ… å› ç‚º Dockerfile åœ¨å°ˆæ¡ˆè³‡æ–™å¤¾å…§,è·¯å¾‘å¾ˆç°¡å–®
COPY ["VocabularyApi.csproj", "."]

# é‚„åŸ NuGet å¥—ä»¶
RUN dotnet restore "VocabularyApi.csproj"

# è¤‡è£½æ‰€æœ‰ç¨‹å¼ç¢¼
COPY . .

# ç·¨è­¯å°ˆæ¡ˆ
RUN dotnet build "VocabularyApi.csproj" -c $BUILD_CONFIGURATION -o /app/build


# ============================================
# éšæ®µ 3: Publish - ç™¼å¸ƒå°ˆæ¡ˆ
# ============================================
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "VocabularyApi.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false


# ============================================
# éšæ®µ 4: Final - æœ€çµ‚æ˜ åƒ
# ============================================
FROM base AS final
WORKDIR /app

# å¾ publish éšæ®µè¤‡è£½æª”æ¡ˆ
COPY --from=publish /app/publish .

# ğŸ”§ Railway æœƒè‡ªå‹•æä¾› PORT ç’°å¢ƒè®Šæ•¸
ENV ASPNETCORE_URLS=http://+:$PORT

# å•Ÿå‹•æ‡‰ç”¨
ENTRYPOINT ["dotnet", "VocabularyApi.dll"]