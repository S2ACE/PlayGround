# Base éšæ®µ:é‹è¡Œç’°å¢ƒ
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

# Build éšæ®µ:ç·¨è­¯å°ˆæ¡ˆ
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release

# ğŸ”§ é—œéµ:è¨­å®šå·¥ä½œç›®éŒ„ç‚º /src
WORKDIR /src

# ğŸ”§ è¤‡è£½æ‰€æœ‰æª”æ¡ˆåˆ° /src (åŒ…æ‹¬ .csproj)
COPY . .

# ğŸ”§ ç¾åœ¨å¯ä»¥æ‰¾åˆ° VocabularyAPI.csproj
RUN dotnet restore "VocabularyAPI.csproj"

# ç·¨è­¯å°ˆæ¡ˆ
RUN dotnet build "VocabularyAPI.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Publish éšæ®µ:æ‰“åŒ…
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "VocabularyAPI.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Final éšæ®µ:æœ€çµ‚æ˜ åƒ
FROM base AS final
WORKDIR /app

# å¾ publish éšæ®µè¤‡è£½ç·¨è­¯å¥½çš„æª”æ¡ˆ
COPY --from=publish /app/publish .

# è¨­å®šç›£è½ Railway çš„ PORT
ENV ASPNETCORE_URLS=http://+:${PORT}

# å•Ÿå‹•æ‡‰ç”¨
ENTRYPOINT ["dotnet", "VocabularyAPI.dll"]