# Base éšæ®µ:é‹è¡Œç’°å¢ƒ
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

# Build éšæ®µ:ç·¨è­¯å°ˆæ¡ˆ
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# è¤‡è£½æ‰€æœ‰æª”æ¡ˆ
COPY . .

# ğŸ”§ ä¿®æ­£:æŒ‡å®šå°ˆæ¡ˆæª”åç¨±
RUN dotnet restore "VocabularyAPI.csproj"

# ğŸ”§ ä¿®æ­£:æŒ‡å®šå°ˆæ¡ˆæª”åç¨±
RUN dotnet build "VocabularyAPI.csproj" -c Release -o /app/build

# Publish éšæ®µ:æ‰“åŒ…
FROM build AS publish
# ğŸ”§ ä¿®æ­£:æŒ‡å®šå°ˆæ¡ˆæª”åç¨±
RUN dotnet publish "VocabularyAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final éšæ®µ:æœ€çµ‚æ˜ åƒ
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# è¨­å®šç›£è½ Railway çš„ PORT
ENV ASPNETCORE_URLS=http://+:${PORT}

# å•Ÿå‹•æ‡‰ç”¨
ENTRYPOINT ["dotnet", "VocabularyApi.dll"]
