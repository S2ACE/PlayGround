# Base éšæ®µ:é‹è¡Œç’°å¢ƒ
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

# Build éšæ®µ:ç·¨è­¯å°ˆæ¡ˆ
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# è¤‡è£½æ‰€æœ‰æª”æ¡ˆ
COPY . .

# ğŸ” åµéŒ¯æ­¥é©Ÿ 1: é¡¯ç¤ºç•¶å‰ç›®éŒ„
RUN pwd

# ğŸ” åµéŒ¯æ­¥é©Ÿ 2: åˆ—å‡ºæ‰€æœ‰æª”æ¡ˆå’Œè³‡æ–™å¤¾
RUN ls -la

# ğŸ” åµéŒ¯æ­¥é©Ÿ 3: éè¿´åˆ—å‡ºæ‰€æœ‰æª”æ¡ˆ
RUN find . -type f

# ğŸ” åµéŒ¯æ­¥é©Ÿ 4: æŸ¥æ‰¾æ‰€æœ‰ .csproj æª”æ¡ˆ
RUN find . -name "*.csproj"

# ç¾åœ¨å˜—è©¦ restore (å¦‚æœå¤±æ•—,è‡³å°‘æˆ‘å€‘èƒ½çœ‹åˆ°ä¸Šé¢çš„è¼¸å‡º)
RUN dotnet restore "VocabularyAPI.csproj" || echo "Restore failed, but continuing to show debug info"

# å¦‚æœåˆ°é€™è£¡,è¡¨ç¤º restore æˆåŠŸ
RUN dotnet build "VocabularyAPI.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Publish éšæ®µ
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "VocabularyAPI.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Final éšæ®µ
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENV ASPNETCORE_URLS=http://+:${PORT}
ENTRYPOINT ["dotnet", "VocabularyAPI.dll"]
